<div class="container border border-dark">
    <%= link_to 'Back', companies_path, class: 'btn btn-secondary float-right mx-3 mt-3' %>
    <h1 class="card-header border border-secondary"><%= @company.name%></h1>
    <br>
    <br>
    <h4>Post your own claim</h4>
    <%= render 'claims/form' %>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Content</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <%= render @company.claims %>
        </tbody>
    </table>
</div>